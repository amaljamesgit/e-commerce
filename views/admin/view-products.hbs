<section>
    <div class="container">
        <div class="mt-8 pull-right">
            <a href="/admin/add-product"class="btn btn-lg btn-success ">Add Products</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    {{!-- <th scope="col">No</th> --}}
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Rate</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    {{!-- <th scope="row">1</th> --}}
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.rate}}</td>
                    <td><img src="/product-images/{{this._id}}.jpg" alt="" style="height:50px ;width:80px ;"></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>

                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick=" return confirm('Are you want to delete {{this.name}} ?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
                
            </tbody>
        </table>
    </div>
</section>